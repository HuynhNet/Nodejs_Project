    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img class="img-responsive" src="images/qc7.png" alt="Image">
                        </div>

                        <div class="item">
                            <img class="img-responsive" src="images/qc4.gif" alt="Image">
                        </div>

                        <div class="item">
                            <img class="img-responsive" src="images/qc5.png" alt="Image">
                        </div>

                        <div class="item">
                            <img class="img-responsive" src="images/qc3.png" alt="Image">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div> <!-- end carousel -->
            </div> <!-- end col 8 -->

            <style>
                @media only screen and (max-device-width: 480px) {
                    .hinhphai {
                        display: none;
                    }
                }
            </style>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 hinhphai">
                <div class="hover">
                    <figure><img src="images/phai3.jpg" class="img-responsive" alt="Image">
                    </figure>
                </div>
                <div class="hover" style="padding-top: 7px;">
                    <figure><img src="images/phai2.jpg" class="img-responsive" alt="Image">
                    </figure>
                </div>
            </div> <!-- end col 4 -->
        </div> <!-- end row -->
    </div>


    <style>
        .panel-default .box {
            transition: box-shadow .3s;
            background: #fff;
        }

        .panel-default .box:hover {
            box-shadow: 0 0 20px rgba(20, 20, 20, .2);
        }

        .panel-default .panel-body a {
            text-decoration: none;
        }

        .panel-default .panel-body:hover a {
            color: red;
        }
    </style>
    <br><br>

    <% if (messages.add_cart_success) { %>
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"></div>
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 ">
        <div class="alert alert-success alert-dismissible fixed-top">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong><%= messages.add_cart_success %></strong>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
    <% } %>

    <div class="container noibat">
        <div class="row">
            <div class="container">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="row ul">
                        <h4 class="navbar-left">ĐIỆN THOẠI NỖI BẬT NHẤT</h4>
                        <a href="" class="navbar-right">Xem tất cả</a>
                    </div>

                    <div class="row">
                        <div class="panel panel-default">
                            <% phones.forEach(phone => { %>
                            <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3 box">
                                <% typeNamePhone.forEach(typeNamePhones => { %>
                                <div class="panel-body">
                                    <a
                                        href="/home/<%= changeUrl(typeNamePhones.type_name) %>/<%= changeUrl(phone.name) %>/<%= phone.id %>">
                                        <img style="width: 200px; height:200px;"
                                            src="upload/image_products/<%= phone.image %>" class="img-responsive"
                                            alt="Image"></a><br>
                                    <a
                                        href="/home/<%= changeUrl(typeNamePhones.type_name) %>/<%= changeUrl(phone.name) %>/<%= phone.id %>">
                                        <%= phone.name %> </a><br>
                                    <% if (phone.promotion_price == 0) { %>
                                    <strong><%= Intl.NumberFormat().format(phone.price) %> đ</strong>
                                    <% } else { %>
                                    <strong class="navbar-left" style="text-decoration: line-through;">
                                        <%= Intl.NumberFormat().format(phone.price) %> đ</strong>
                                    <strong
                                        class="navbar-right"><%= Intl.NumberFormat().format(phone.promotion_price) %>
                                        đ</strong>
                                    <% } %>
                                </div>

                                <div class="panel-footer">
                                    <a href="/add-cart/<%= changeUrl(phone.name) %>/<%= phone.id %>"
                                        class="btn btn-primary" data-toggle="tooltip" title="thêm vào giỏ hàng"><i
                                            class="fa fa-shopping-cart"></i></a>

                                    <a style="margin-right: 4px;" class="btn btn-default navbar-right"
                                        href="/home/<%= changeUrl(typeNamePhones.type_name) %>/<%= changeUrl(phone.name) %>/<%= phone.id %>">Xem
                                        chi tiết <i class="fa fa-chevron-right"></i></a>
                                </div>

                                <% }) %>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
